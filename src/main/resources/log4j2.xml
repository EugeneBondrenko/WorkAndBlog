<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout pattern="%d{ISO8601} [%t] %-5p %c %x - %m%n`"/>
        </Console>
    </Appenders>

    <Loggers>

        <Logger name="workandblog.logger.ControllerLogger" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="workandblog.util.SaveFile" level="debug" additivity="false">
            <AppenderRef ref="Console"></AppenderRef>
        </Logger>

    </Loggers>

</Configuration>